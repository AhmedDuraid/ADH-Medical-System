<h3>RoleTable</h3>
@using UIDataAccess.Library.Models.Admin

@if (Role != null)
{
    <table class="table table-striped table-hover table-sm table-responsive">

        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Role</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Role)
            {
            <tr id="@item.Id"@onclick="()=> SelectedRole.InvokeAsync(item)">
                <th scope="row">@item.Id</th>
                <th>@item.Name</th>
            </tr>
            }

        </tbody>

    </table>

}


@code {
    [Parameter]
    public List<RoleModle> Role { get; set; }

    [Parameter]
    public EventCallback<RoleModle> SelectedRole { get; set; }

}
